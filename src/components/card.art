{{each songs song}}
  <div class="card">
    <div class="info">
      <strong>{{song.name}}</strong>
      <span class="margin-top-s">专辑：《{{song.alName}}》</span>
    </div>
    <div class="play">
      <img class="play-button stop-{{song.id}}" value="stop" src="../imgs/stop.svg" id="{{song.id}}">
      <img class="play-button play-{{song.id}}" value="play" src="../imgs/play.svg" style="display: none;" id="{{song.id}}">
    </div>
  </div>
{{/each}}